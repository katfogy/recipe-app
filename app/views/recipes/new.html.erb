<div class="container d-flex justify-content-center p-5" style="height:500px">
<%= form_with(model: @recipe, class: "form") do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", style: "width: 300px;" %>
    </div>

    <div class="form-group">
      <%= form.label :preparation_time_minutes %>
      <%= form.text_field :preparation_time_minutes, class: "form-control", style: "width: 100px;" %>
    </div>

    <div class="form-group">
      <%= form.label :cooking_time_minutes %>
      <%= form.text_field :cooking_time_minutes, class: "form-control", style: "width: 100px;" %>
    </div>

    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_area :description, class: "form-control", style: "width: 300px;" %>
    </div>

    <div class="form-group">
      <%= form.select :is_public, options_for_select(['true','false']), prompt: 'Public or private?' %>
    </div>

    <div class="form-group">
      <%= form.submit "Create Recipe", class: "btn btn-primary mt-3" %>
    </div>

    <%= link_to "Back to recipes", recipes_path, class: "btn btn-secondary mt-3" %>
  <% end %>
</div>